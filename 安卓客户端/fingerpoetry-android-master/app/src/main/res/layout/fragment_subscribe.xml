<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.jude.easyrecyclerview.EasyRecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        widget:scrollbarStyle="insideOverlay"
        widget:layout_empty="@layout/view_empty"
        />

    <TextView
        android:id="@+id/tvTip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tip_height"
        android:layout_gravity="top|center_horizontal|start"
        android:layout_weight="1"
        android:background="#48aba1"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/white"
        android:visibility="invisible" />
    <com.material.widget.CircularProgress
        android:id="@+id/cprogress"
        widget:circular_progress_size="Normal"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_width="@dimen/progree_size"
        android:layout_height="@dimen/progree_size"/>
</RelativeLayout>
