<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/guide_img3" />

    <Button
        android:id="@+id/btn_enter_novel"
        android:layout_width="126dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="78dp"
        android:background="@drawable/button_shape"
        android:text="@string/entrnovel"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_enter_chapter"
        android:layout_width="126dp"
        android:layout_height="35dp"
        android:layout_above="@id/btn_enter_novel"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:background="@drawable/button_shape"
        android:text="@string/entrchapter"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="visible" />


    <TextView
        android:id="@+id/tip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="222dp"
        android:text="美文、诗歌、历史，这里都有"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="192dp"
        android:text="小说更新不用等，及时送达给你"
        android:textColor="#ffffff"
        android:textSize="20sp" />
</RelativeLayout>